@{
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@using (Html.BeginForm("PartyElections", "User", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="row">
        @foreach (var party in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card election-card" style="width: 18rem;">
                    <img src="~/images/petra.jpg" class="card-img-top" alt="Party Image">
                    <div class="card-body">
                        <h5 class="card-title">@party.Name</h5>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="selectedPartyListId" value="@party.GeneralListingID" id="party@party.GeneralListingID">
                            <label class="form-check-label" for="party@party.GeneralListingID">
                                Select @party.Name
                            </label>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
}

<style>
    .election-card {
        background-color: #fff; /* White background */
        color: rgba(0, 0, 0, 1); /* Black text */
        border: none;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        margin: 10rem;
    }

    .row {
        margin-right: 0px;
        margin-left: 14rem;
    }

    .election-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
    }

    .card-img-top {
        border-top-left-radius: 8px;
        border-top-right-radius: 8px;
        width: 100%;
        height: 180px; /* Fixed height for images */
        object-fit: cover;
    }

    .card-body {
        text-align: center; /* Center align text */
        padding: 1.25rem; /* Adjust padding to fit the card */
    }

    .card-title {
        font-size: 18px; /* Adjust title size */
        margin-bottom: 10px;
    }

    .btn-light {
        background-color: #fff;
        color: #dc3545; /* Red text */
        border: none;
        border-radius: 5px;
    }

        .btn-light:disabled {
            background-color: #f8f9fa;
            color: #dc3545;
        }
</style>
