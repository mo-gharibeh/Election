@model IEnumerable<fstCopy_Proj5.Models.GeneralListing>

@{
    ViewBag.Title = "Party Elections";
}

<h2>Party Elections</h2>

<p>Welcome to the party elections page.</p>

@using (Html.BeginForm("PartyElections", "USER", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="row">
        @foreach (var party in Model)
        {
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">@party.Name</h5>

                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="selectedPartyListId" value="@party.GeneralListingID" id="party@party.GeneralListingID">
                            <label class="form-check-label" for="party@party.GeneralListingID">
                                @party.Name
                            </label>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
}
