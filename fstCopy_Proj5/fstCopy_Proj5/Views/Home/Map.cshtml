
@{
    ViewBag.Title = "Map";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>Map</h2>


<!-- Map container with background image acting as the map -->
<div id="map" style="height: 100%; width: 100%; min-height: 500px; position: relative;"></div>

<!-- CSS for the map and marker styling -->
<style>
    html, body {
        height: 100%;
        margin: 0;
    }

    #map {
        width: 100%;
        height: 100vh; /* Full height of the viewport */
        min-height: 500px; /* Minimum height */
        background-image: url('@Url.Content("~/Content/images/static-map.jpg")'); /* Path to your static map image */
        background-size: cover; /* Make sure the image covers the entire div */
        background-position: center;
    }

    .marker {
        position: absolute;
        width: 20px;
        height: 20px;
        background-color: red;
        border-radius: 50%;
        transform: translate(-50%, -100%);
    }

    .tooltip {
        position: absolute;
        background-color: #fff;
        padding: 5px;
        border: 1px solid #ccc;
        display: none;
        transform: translate(-50%, -100%);
        white-space: nowrap;
    }

    .marker:hover + .tooltip {
        display: block;
    }
</style>


    <script>
        // Function to create a marker on the static image map
        function createMarker(lat, lng, comment) {
            var map = document.getElementById('map');

            // Create the marker element
            var marker = document.createElement('div');
            marker.className = 'marker';
            marker.style.left = lat + '%'; // X percentage position
            marker.style.top = lng + '%';  // Y percentage position
            map.appendChild(marker);

            // Create a tooltip for the marker
            var tooltip = document.createElement('div');
            tooltip.className = 'tooltip';
            tooltip.innerHTML = comment;
            map.appendChild(tooltip);

            // Position the tooltip relative to the marker
            tooltip.style.left = lat + '%';
            tooltip.style.top = (lng - 2) + '%';  // Slightly above the marker
        }

        // Adding markers to the static map
        createMarker(50, 50, 'Irbid: Known for its universities'); // Example position, adjust accordingly
        createMarker(60, 40, 'Ajloun: Famous for its castle');    // Example position, adjust accordingly
    </script>
