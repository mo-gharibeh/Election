@model fstCopy_Proj5.Models.User

@{
    ViewBag.Title = "بحث عن الناخب";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<style>
    .text-right {
        border: 1px solid #dee2e6;
        border-right: 8px solid #aedee7;
        padding: 10px;
        margin-bottom: 13%;
        border-radius: -1%;
    }


    input#NationalNumber {
        margin-bottom: 40px !important;
        border-radius: 0px !important;
        height: 50px;
        width: 52% !important;
    }

    .card-body {
        border-right: 5px solid lightgray;
    }

    button.btn.btn-outline-danger {
        width: 10%;
        font-size: 107%;
        border-radius: 0px !important;
        background-color: #C6273A;
    }

    label.font-weight-bold {
        font-size: 141%;
        font-weight: 600;
        margin: 4px;
    }

    label.font-weight-bold {
        font-size: 141%;
        font-weight: 600;
        margin: 4px;
    }

    .img-fluid {
        position: relative;
        left: 47%;
        min-width: 140% !important;
        height: 99%;
    }

    .bg-primary {
        --bs-bg-opacity: 1;
        background-color: white !important;
    }

    .card-body {
        min-height: 300px;
    }
</style>

<div class="container mt-5" dir="rtl">

    <div class="text-right">
        لمعرفة دائرتك الإنتخابية ادخل الرقم الوطني في الخانة التالية
    </div>


    <div class="card">

        <div class="card-body">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-group">

                    <label class="font-weight-bold" style="color: #000;">الرقم الوطني :</label>
                    <div class="mt-2">
                        @Html.TextBoxFor(m => m.NationalNumber, new { @class = "form-control", @placeholder = "أدخل الرقم الوطني", style = "margin: 10px 0;" })
                        @Html.ValidationMessageFor(m => m.NationalNumber, "", new { @class = "text-danger" })
                    </div>
                </div>


                <button type="submit" class="btn btn-outline-danger" style="color: white; border-color: red;">بحث</button>
            }

            @if (Model.FullName != null)
            {
                <hr />
                <div class="row">

                    <div class="col-md-8">


                        <dl class="row">
                            <dt class="col-sm-3 font-weight-bold">اسم الناخب:</dt>
                            <dd class="col-sm-9">@Model.FullName</dd>



                            <dt class="col-sm-3 font-weight-bold">الرقم الوطني:</dt>
                            <dd class="col-sm-9">@Model.NationalNumber</dd>


                            <dt class="col-sm-3 font-weight-bold">المحافظة:</dt>
                            <dd class="col-sm-9">@Model.Governorate</dd>

                            <dt class="col-sm-3 font-weight-bold">الدائرة الانتخابية:</dt>
                            <dd class="col-sm-9">@Model.ElectionArea</dd>



                            <dt class="col-sm-3 font-weight-bold">اسم مركز الاقتراع والفرز:</dt>
                            <dd class="col-sm-9">@Model.NameOftheStation</dd>

                            <dt class="col-sm-3 font-weight-bold">رقم الصندوق:</dt>
                            <dd class="col-sm-9">@Model.FundNumber</dd>

                            <dt class="col-sm-3 font-weight-bold">مكان الاقامة:</dt>
                            <dd class="col-sm-9">@Model.PlaceOfResidence</dd>


                        </dl>
                    </div>

                    <!-- عرض صورة الخريطة -->
                    <div class="col-md-4 text-left">
                        <img src="@Url.Content("~/images/king_hssien.jpg")" alt="صورة" class="img-fluid" />
                    </div>
                </div>
            }
        </div>
    </div>
</div>