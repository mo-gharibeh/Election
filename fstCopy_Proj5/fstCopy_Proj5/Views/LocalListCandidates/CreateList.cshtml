@model fstCopy_Proj5.Models.LocalList

@{ 
    Layout = "~/Views/Shared/_MainLayout.cshtml";

}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>إضافة قائمة جديدة</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <style>
        body {
            direction: rtl;
            text-align: right;
        }

        .custom-form .control-label {
            text-align: right;
        }

        .custom-form .text-center {
            text-align: center;
        }

        .custom-form .form-group label {
            font-weight: bold;
        }

        .form-container {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
        }

        .form-section {
            flex: 1;
            margin-left: 20px;
            border: 1px solid #ddd;
            padding: 20px;
            border-radius: 5px;
            background-color: #f8f9fa;
            max-width: 500px;
        }

        .image-section img {
            width: 100%;
            height: auto;
            border-radius: 5px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .form-group.text-right {
            text-align: right;
        }

            .form-group.text-right input[type="submit"] {
                background-color: #d9534f;
                border-color: #d43f3a;
                color: #fff;
                width: 100%;
            }

                .form-group.text-right input[type="submit"]:hover {
                    background-color: #c9302c;
                    border-color: #ac2925;
                }

        .btn {
            padding: 6px 12px;
            margin-bottom: 0;
            font-size: 14px;
            font-weight: 400;
            line-height: 1.42857143;
            text-align: center;
            white-space: nowrap;
            vertical-align: middle;
            -ms-touch-action: manipulation;
            touch-action: manipulation;
            cursor: pointer;
            -webkit-user-select: none;
            -moz-user-select: none;
            -ms-user-select: none;
            user-select: none;
            background-image: none;
            border: 1px solid transparent;
            border-radius: 4px;
        }

        .page-title {
            text-align: right;
            font-weight: bold;
            font-size: 28px;
            margin-bottom: 40px;
        }
    </style>
</head>
<body>
    <div class="container custom-form">
        <h2 class="page-title">إضافة قائمة جديدة</h2>
        <div class="form-container">
            <div class="form-section">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div class="form-horizontal">
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="form-group">
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.ListName, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.ListName, "", new { @class = "text-danger" })
                            </div>
                            <label class="control-label col-md-2">اسم القائمة</label>
                        </div>

                        <div class="form-group">
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.ID, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.ID, "", new { @class = "text-danger" })
                            </div>
                            <label class="control-label col-md-2">رقم القائمة</label>
                        </div>

                        <div class="form-group">
                            <div class="col-md-10">
                                @Html.DropDownListFor(model => model.Governorate, new SelectList(new List<string> { "إربد", "عجلون" }), "اختر المحافظة", new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Governorate, "", new { @class = "text-danger" })
                            </div>
                            <label class="control-label col-md-2">المحافظة</label>
                        </div>

                        <div class="form-group">
                            <div class="col-md-10">
                                @Html.DropDownListFor(model => model.ElectionArea, ViewBag.ElectionAreas as SelectList, "اختر منطقة الانتخابات", new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.ElectionArea, "", new { @class = "text-danger" })
                            </div>
                            <label class="control-label col-md-2">دائرة الانتخابية</label>
                        </div>

                        <div class="form-group text-right">
                            <div class="col-md-12">
                                <input type="submit" value="الانتقال إلى النموذج التالي" class="btn btn-primary" />
                            </div>
                        </div>
                    </div>
                }
            </div>

            <div class="image-section">
                <img src="~/images/jordan.jpg" alt="Image">
            </div>
        </div>
    </div>
</body>
</html>