@model fstCopy_Proj5.Models.LocalList

@{
    
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<!DOCTYPE html>
<html lang="ar">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>إضافة قائمة جديدة</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <style>
        body {
            direction: rtl;
            text-align: right;
            background-color: #f8f9fa;
        }

        .card {
            border-radius: 15px;
            overflow: hidden;
            box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.1);
            display: flex;
            flex-direction: column;
            margin-top: 50px;
            padding: 20px;
            justify-content: center !important;
        }

        .table-header {
            width: 100%;
            margin-top: 2%;
            /*            padding-left:3%;
        */ border-collapse: collapse;
        }

            .table-header th, .table-header td {
                border: 1px solid #333;
                text-align: center;
                padding: 10px;
            }

        .header-logo {
            width: 150px;
        }

        .header-title {
            background-color: #b8b8b8;
            color: #fff;
            font-size: 18px;
            font-weight: bold;
        }

        .header-green {
            background-color: #008000;
            color: #fff;
            font-size: 18px;
            font-weight: bold;
        }

        .form-section {
            background-color: #ffffff;
            padding: 30px;
            border-radius: 15px;
        }

        .form-group label {
            font-weight: bold;
            text-align: right;
            margin-bottom: 10px;
        }

        .form-control {
            text-align: right;
            direction: rtl;
            margin-bottom: 15px;
            height: calc(2.25rem + 10px);
            padding: 10px;
            font-size: 16px;
        }

        .btn-primary {
            background-color: #d9534f;
            border-color: #d43f3a;
            color: #fff;
            width: 100%;
            font-size: 18px;
            padding: 10px;
            border-radius: 8px;
        }

            .btn-primary:hover {
                background-color: #c9302c;
                border-color: #ac2925;
            }

        .page-title {
            text-align: center;
            font-weight: bold;
            font-size: 28px;
            margin-bottom: 40px;
        }

        .image-section img {
            border-radius: 15px;
            width: 100%;
            object-fit: cover;
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <div class="container custom-form">

        <h2 class="page-title">
            "ساهم في صنع القرار وتغيير المستقبل، رشّح نفسك الآن وكن جزءًا من مسيرة التطوير في مجتمعنا."
        </h2>

        <div class="card">

            <div class="image-section">
                <img src="~/images/image.jpg" alt="Image" class="img-responsive">
            </div>
            <table class="table-header">
                <tr>
                    <td rowspan="2" class="header-logo"><img src="~/images/loginimg.png" alt="Logo" style="width: 100%; height: auto;"></td>
                    <td class="header-title">الهيئة المستقلة للانتخاب</td>
                    <td class="header-green">انتخابات مجلس النواب</td>
                </tr>
                <tr>
                    <td class="header-title">الدائرة الانتخابية المحلية</td>
                    <td class="header-green">2024</td>
                </tr>
            </table>

            <div class="form-section" style="align-self:center">
                @using (Html.BeginForm("CreateList", "LocalListCandidates"))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="form-group">
                            <label for="ListName" class="control-label">اسم القائمة</label>
                            <div>
                                @Html.EditorFor(model => model.ListName, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.ListName, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="ID" class="control-label">رقم القائمة</label>
                            <div>
                                @Html.EditorFor(model => model.ID, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.ID, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="Governorate" class="control-label">المحافظة</label>
                            <div>
                                @Html.DropDownListFor(model => model.Governorate, new SelectList(new List<string> { "إربد", "عجلون" }), "اختر المحافظة", new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Governorate, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="ElectionArea" class="control-label">الدائرة الانتخابية</label>
                            <div>
                                @Html.DropDownListFor(model => model.ElectionArea, ViewBag.ElectionAreas as SelectList, "اختر منطقة الانتخابات", new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.ElectionArea, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group text-right">
                            <div>
                                <input type="submit" value="الانتقال إلى النموذج التالي" class="btn btn-primary" />
                            </div>
                        </div>
                    </div>
                }
            </div>

        </div>
    </div>

